{
    "AWSEBDockerrunVersion": 2,
    "volumes": [
        {
            "host": {
                "sourcePath": "/var/app/current/backend"
            },
            "name": "Backend"
        },
        {
            "host": {
                "sourcePath": "/var/app/current/frontend"
            },
            "name": "Frontend"
        }
    ],
    "containerDefinitions": [
        {
            "command": [
                "bash",
                "-c",
                "cd /usr/src/app && npm install && npm run dev"
            ],
            "essential": true,
            "image": "node:12",
            "memory": 250,
            "mountPoints": [
                {
                    "containerPath": "/usr/src/app",
                    "sourceVolume": "Backend"
                }
            ],
            "name": "backend-api",
            "portMappings": [
                {
                    "containerPort": 8000,
                    "hostPort": 8000
                }
            ]
        },
        {
            "command": [
                "bash",
                "-c",
                "cd /usr/src/app && yarn install && yarn start"
            ],
            "essential": true,
            "image": "node:12",
            "memory": 350,
            "mountPoints": [
                {
                    "containerPath": "/usr/src/app",
                    "sourceVolume": "Frontend"
                }
            ],
            "name": "frontend-app",
            "portMappings": [
                {
                    "containerPort": 3000,
                    "hostPort": 80
                }
            ]
        }
    ],
    "family": ""
}
